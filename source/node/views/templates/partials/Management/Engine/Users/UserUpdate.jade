section.dialog-static
  .container
    .row

      .col-12.col-sm-3.col-lg-3.col-push-9 menu

      form.form.col-12.col-sm-9.col-lg-9.col-pull-3(name='UserForm')
        .form-body
          .row: .col-12.col-sm-12.col-lg-12
            h3.dialog-title(style='text-align:center') Редактировать пользователя
            input.input(placeholder='Пользователь', name='username', type='text', required, ng-model='user.username', ng-change='change(UserForm.username)')
            input.input(placeholder='Пароль', name='password', type='text', ng-model='user.password')
        .form-foot
          .row
            .col-8
              button.btn.btn-primary.btn-block(type='submit', ng-click='update(UserForm)', ng-disabled='!UserForm.$valid')
                span Сохранить пользователя
            .col-4
              a.btn.btn-warning.btn-block(ng-click='delete()')
                span Удалить