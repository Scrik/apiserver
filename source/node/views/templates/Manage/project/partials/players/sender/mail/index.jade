extends ../../../layout
extends ../../layout

block section--main
    input.input(placeholder='Поиск', ng-model='playerSearch')
    table.table.players
        thead
            tr
                th.t: .t-col #
                th.t.col-flex: .t-col.table-col Игрок
                th.t: .t-col Почта

        tbody
            tr(ng-repeat='player in players | filter:playerSearch', ng-click='togglePlayer(player)', ng-class='{"selected":player.selected}')
                td.t: .t-col {{player.id}}
                td.t: .t-col {{player.name}}
                td.t: .t-col {{player.email}}


append section--side
    form(name='MailForm')
        fieldset
            input.input(placeholder='Тема', type='text', required, ng-model='mail.subject')
            textarea.input(placeholder='Тело', type='text', required, ng-model='mail.text')

        fieldset
            button.btn.btn-primary.btn-block(type='submit', ng-click='send()', ng-disabled='!MailForm.$valid')
                span Отправить
