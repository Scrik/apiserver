section(ng-controller="UsersCtrl")
  .container
    .row
      .col-12.col-sm-3.col-lg-3.col-push-9 menu

      .col-12.col-sm-9.col-lg-9.col-pull-3
        .toolbar
          h3.toolbar-title Пользователи системы
          a.btn.btn-primary.btn-small.toolbar-btn(ng-href='#/users/create') Добавить пользователя
        hr
        ul.UserList(ng-repeat='user in users | filterUsers', ng-animate='"list"')
          li
            a(ng-href='#/users/{{user.id}}') {{user}}
            a.btn(ng-href='#/users/{{user.id}}?action=delete') Удалить

